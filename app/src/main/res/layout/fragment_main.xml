<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_root_background">

    <TextView
        android:id="@+id/main_UGS"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="20dp"
        android:text="UGS: 10"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/main_EUS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="20dp"
        android:text="EUS: 5"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/main_UGS"
        app:layout_constraintEnd_toStartOf="@+id/main_DS"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_UGS"
        app:layout_constraintTop_toTopOf="@+id/main_UGS" />

    <TextView
        android:id="@+id/main_DS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="20dp"
        android:text="DS: 500000"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/main_EUS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_EUS"
        app:layout_constraintTop_toTopOf="@+id/main_EUS" />

    <View
        android:id="@+id/view"
        android:layout_width="379dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_divider_line"
        app:layout_constraintBottom_toTopOf="@+id/main_spaceCraft_name"
        app:layout_constraintTop_toBottomOf="@+id/main_UGS"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:rotation="45"
        android:src="@drawable/ic_ufo"
        app:layout_constraintEnd_toEndOf="@+id/main_spaceCraft_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/main_spaceCraft_name"
        app:layout_constraintTop_toTopOf="@+id/main_spaceCraft_name" />

    <TextView
        android:id="@+id/main_spaceCraft_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="@string/space_craft_name"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/main_damage_capacity"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_detail_box"
        android:gravity="center"
        android:padding="8dp"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_spaceCraft_name"
        app:layout_constraintEnd_toStartOf="@+id/main_counter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_spaceCraft_name"
        app:layout_constraintTop_toTopOf="@+id/main_spaceCraft_name" />

    <TextView
        android:id="@+id/main_counter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_detail_box"
        android:gravity="center"
        android:padding="8dp"
        android:text="49s"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_damage_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_damage_capacity"
        app:layout_constraintTop_toTopOf="@+id/main_damage_capacity" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_search_box"
        android:drawableStart="@drawable/ic_telescope"
        android:drawablePadding="16dp"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="#30353A"
        android:textColorHint="#7930353A"
        app:layout_constraintBottom_toTopOf="@+id/main_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_spaceCraft_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/main_current_station_textView"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <ImageView
        android:id="@+id/main_arrow_forward"
        android:layout_width="52dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@+id/main_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <ImageView
        android:id="@+id/main_arrow_back"
        android:layout_width="52dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@+id/main_recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/main_current_station_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="Soyle"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_recyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>