<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="48dp"
    android:background="@drawable/shape_station_item_stroke">

    <TextView
        android:id="@+id/tv_station_ugs_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="2000/1000"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_station_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <TextView
        android:id="@+id/tv_station_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200EUS"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_station_name"
        app:layout_constraintStart_toStartOf="@+id/tv_station_ugs_capacity"
        app:layout_constraintTop_toBottomOf="@+id/tv_station_ugs_capacity" />

    <ImageView
        android:id="@+id/iv_station_favorite"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="YZCRF - 246"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_station_travel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_station_distance" />

    <Button
        android:id="@+id/btn_station_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Travel!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_station_name"
        app:layout_constraintStart_toStartOf="@+id/tv_station_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_station_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
